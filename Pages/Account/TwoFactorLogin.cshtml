@page
@model WebApplication1.Pages.Account.TwoFactorLoginModel
@{
    ViewData["Title"] = "Two-factor authentication";
}

<h1>Two-factor authentication</h1>

<p>Enter the code from your authenticator app or a recovery code.</p>

<form method="post">
    <partial name="_ValidationScriptsPartial" />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="mb-3">
        <label asp-for="Input.Code" class="form-label">Authenticator code</label>
        <input asp-for="Input.Code" class="form-control" autocomplete="one-time-code" />
        <span asp-validation-for="Input.Code" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.RecoveryCode" class="form-label">Recovery code</label>
        <input asp-for="Input.RecoveryCode" class="form-control" />
        <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Input.RememberMachine" class="form-check-input" />
        <label asp-for="Input.RememberMachine" class="form-check-label">Remember this machine</label>
    </div>

    <div class="d-flex justify-content-between align-items-center">
        <button type="submit" class="btn btn-primary">Verify</button>
        <a asp-page="/Account/Login" class="btn btn-link">Back to login</a>
    </div>
</form>