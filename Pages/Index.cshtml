@page
@model WebApplication1.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1 class="display-4">Ace Job Agency</h1>
            <p class="lead">Find your next opportunity — manage your profile and applications securely.</p>
        </div>
    </div>

    @if (TempData["ModalTitle"] != null || TempData["ModalBody"] != null)
    {
        <div id="_modalTitle" style="display:none">@TempData["ModalTitle"]</div>
        <div id="_modalBody" style="display:none">@TempData["ModalBody"]</div>
    }

    @if (User?.Identity?.IsAuthenticated == true)
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Your profile</h5>
                        <p><strong>Name:</strong> @Model.FullName</p>
                        <p><strong>Email:</strong> @Model.Email</p>
                        <p><strong>Date of birth:</strong> @(Model.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")</p>
                        <p><strong>NRIC:</strong> @Model.DecryptedNRIC</p>
                        @if (!string.IsNullOrEmpty(Model.ResumeUrl))
                        {
                            <p><strong>Resume:</strong> <a href="@Model.ResumeUrl" target="_blank" rel="noopener">View resume</a></p>
                        }
                        <a class="btn btn-sm btn-outline-secondary me-2" asp-page="/Account/ChangePassword">Change password</a>
                        <button type="button" class="btn btn-sm btn-danger logout-trigger">Logout</button>
                        <a class="btn btn-sm btn-outline-primary ms-2" asp-page="/Account/ManageTwoFactor">Manage 2FA</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Recent activity</h5>
                        @if (Model.RecentAuditLogs != null && Model.RecentAuditLogs.Any())
                        {
                            <ul class="list-group list-group-flush">
                                @foreach (var a in Model.RecentAuditLogs)
                                {
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <div>
                                                <strong>@a.Event</strong>
                                                <div class="small text-muted">@a.Details</div>
                                            </div>
                                            <div class="text-muted small">@a.OccurredAt.ToLocalTime().ToString("g")</div>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No recent activity.</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-12 text-center">
                <a class="btn btn-primary me-2" asp-page="/Account/Login">Login</a>
                <a class="btn btn-outline-primary" asp-page="/Account/Register">Register</a>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Logout trigger button click event
            $('.logout-trigger').click(function () {
                // Show the logout confirmation modal
                $('#logoutConfirmationModal').modal('show');
            });
        });
    </script>
}

<!-- Logout confirmation modal -->
<div class="modal fade" id="logoutConfirmationModal" tabindex="-1" aria-labelledby="logoutConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="logoutConfirmationModalLabel">Confirm Logout</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to log out?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-page="/Account/Logout" id="logoutForm" class="d-inline">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>
