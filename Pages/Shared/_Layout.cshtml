@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Antiforgery
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ace Job Agency</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WebApplication1.styles.css" asp-append-version="true" />
    <style>
        /* Slight border on buttons for clearer UI */
        .btn { border: 1px solid rgba(0,0,0,0.08); }
        .btn-primary { border-color: #0d6efd; }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Ace Job Agency</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (User?.Identity?.IsAuthenticated == true)
                        {
                            <li class="nav-item d-flex align-items-center">
                                <span class="me-2">Hello, @((User.FindFirst("FullName")?.Value) ?? User.Identity?.Name)</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark logout-trigger" href="#">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-page="/Account/Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Ace Job Agency - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Hidden logout form with antiforgery token -->
    <form id="logoutForm" method="post" action="/Account/Logout" style="display:none"> 
        <input name="__RequestVerificationToken" type="hidden" value="@Antiforgery.GetAndStoreTokens(Context).RequestToken" />
    </form>

    <!-- TempData-driven modal placeholders -->
    @if (TempData.ContainsKey("ModalTitle") || TempData.ContainsKey("ModalBody"))
    {
        <div id="_modalTitle" style="display:none">@TempData["ModalTitle"]</div>
        <div id="_modalBody" style="display:none">@TempData["ModalBody"]</div>
    }

    <!-- 2FA setup prompt placeholder -->
    @if (TempData.ContainsKey("Show2faSetup"))
    {
        <div id="_show2fa" style="display:none">@TempData["Show2faSetup"]</div>
    }

    <!-- Load jQuery first -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Validation scripts must be loaded after jQuery -->
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!-- Logout confirmation modal -->
    <div class="modal fade" id="confirmModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmModalTitle">Confirm</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="confirmModalBody">
                    Are you sure you want to logout?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmModalConfirm">Yes, logout</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Info modal (for messages) -->
    <div class="modal fade" id="infoModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="infoModalTitle">Info</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body" id="infoModalBody"></div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- 2FA setup prompt modal -->
    <div class="modal fade" id="setup2faModal" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Set up two-factor authentication</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    We recommend setting up two-factor authentication to secure your account. Do you want to set it up now?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Do it later</button>
                    <button type="button" class="btn btn-primary" id="setup2faNow">Set up now</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        (function () {
            $(function () {
                // Prevent duplicate modal show
                function showConfirmModal(title, body, onConfirm) {
                    var $modal = $('#confirmModal');
                    if ($modal.hasClass('show')) return; // already visible
                    $('#confirmModalTitle').text(title);
                    $('#confirmModalBody').text(body);
                    var confirmModal = new bootstrap.Modal(document.getElementById('confirmModal'));
                    confirmModal.show();
                    $('#confirmModalConfirm').off('click').on('click', function () {
                        if (typeof onConfirm === 'function') onConfirm();
                        confirmModal.hide();
                    });
                }

                // Delegate logout click so it works when navbar or page has logout-trigger elements
                $(document).on('click', '.logout-trigger', function (e) {
                    e.preventDefault();
                    showConfirmModal('Confirm logout', 'Are you sure you want to logout?', function () {
                        document.getElementById('logoutForm').submit();
                    });
                });

                // If server provided modal info via DOM element, show it
                var title = $('#_modalTitle').text();
                var body = $('#_modalBody').text();
                if (body && body.length > 0) {
                    // ensure not already visible
                    var $info = $('#infoModal');
                    if (!$info.hasClass('show')) {
                        $('#infoModalTitle').text(title || 'Info');
                        $('#infoModalBody').text(body);
                        var infoModal = new bootstrap.Modal(document.getElementById('infoModal'));
                        infoModal.show();
                    }
                }

                // If server asked to show 2FA setup prompt, show it and wire the buttons
                var setupUrl = $('#_show2fa').text();
                if (setupUrl && setupUrl.length > 0) {
                    var setupModal = new bootstrap.Modal(document.getElementById('setup2faModal'));
                    $('#setup2faNow').off('click').on('click', function () {
                        // redirect to enable authenticator
                        window.location.href = setupUrl;
                    });
                    setupModal.show();
                }
            });
        })();
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>